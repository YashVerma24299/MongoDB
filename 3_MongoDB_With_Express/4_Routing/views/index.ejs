<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chats</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    
    <h3>All Chats</h3>

    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br>

    <% for(let chat of chats){ %>
        <div class="chat">
            <p>Sender: <%= chat.from %></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form method="GET" action="/chats/edit/<%= chat._id %>">
                    <button>Edit</button>
                </form>
            </div>
            <p>Receiver: <%= chat.to %></p>
            <hr>
            <p><%=  chat.created_at.toString().split(" ")[4] %></p>
            <p><%=  chat.created_at.toString().split(" ").slice(0,4).join("-") %></p>
            <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                <button>Delete</button>
            </form>
        </div>
    <% } %>
</body>
</html>